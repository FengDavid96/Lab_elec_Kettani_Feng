                  ++++  Erreur instruction : 13
                       |                    
00F0002C:   803FFB1E   |            bne     r16, r0, loopA
                       |                      # Place white disks in pile B
                       |                      #   White disks are 0000, 0001, 0002, etc. from the smallest to the largest
                       |                    
00F00030:   0121883A   |            add     r16, r0, r4
00F00034:              |loopB:              
